{
  "name": "evault-client",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:generate": "prisma generate",
    "test:api": "tsx test-api-routes.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "eVaultApp client application",
  "dependencies": {
    "@hpke/core": "^1.7.2",
    "@hpke/dhkem-x25519": "^1.6.2",
    "@noble/hashes": "^1.8.0",
    "@openadp/ocrypt": "^0.1.3",
    "@prisma/client": "^6.11.1",
    "@tailwindcss/forms": "^0.5.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/uuid": "^10.0.0",
    "@vercel/postgres": "^0.10.0",
    "autoprefixer": "^10.4.16",
    "babel-jest": "^30.0.4",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.11",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.32",
    "prisma": "^6.11.1",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "uuid": "^8.3.2",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "sharp": "^0.34.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.20.3",
    "vercel": "^32.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/__tests__/**/*.(js|jsx)",
      "**/*.(test|spec).(js|jsx)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/*.d.ts"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": [
        "babel-jest",
        {
          "presets": [
            "next/babel"
          ]
        }
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@openadp|@hpke|@noble)/)"
    ]
  }
}
