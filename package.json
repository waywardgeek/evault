{
  "name": "evault",
  "version": "1.0.0",
  "private": true,
  "description": "eVault - Secure Personal Data Vault with OpenADP",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && go run cmd/server/main.go",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cd server && go build -o ../bin/evault-server cmd/server/main.go",
    "build:client": "cd client && npm run build",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "cd client && npm run test",
    "test:integration": "jest --config=tests/integration/jest.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit",
    "setup:test": "npm run docker:up && sleep 5 && npm run test:integration",
    "clean": "rm -rf client/node_modules server/bin client/.next"
  },
  "workspaces": [
    "client",
    "tests"
  ],
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.16",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
} 